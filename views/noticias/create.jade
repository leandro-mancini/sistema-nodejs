extends ../layout

block content
	h1 Cadastrar Nova Notícia
	br
	br
	form(name="cadNoticia", action="/noticias", method="POST" enctype="multipart/form-data")
		div(class="form-group")
			label Título:
			input(type="text", name="titulo", placeholder="Título", class="form-control")
			br
			label Texto:
			textarea(name="texto", placeholder="Notícia", class="form-control")
			br
			label Imagem:
			input(type="file", name="image")
			br
			br
			input(type="submit", value="Cadastrar", class="btn btn-primary")
			&nbsp
			a(href="/noticias" title="Voltar" class="btn btn-warning") Voltar