extends ../layout

block content
	h1 Gerenciamento de Usuário
	br
	br
	if messages.info
		div(class="alert alert-info")
			p #{messages.info}
	br
	table(class="table well" id="tb1")
		thead
			tr(class="")
				th ID
				th Nome
				th Login
				th Senha
				th Data
				th Ações
		tbody
			each valor, i in lista
				tr(class="")
					td #{valor._id}
					td #{valor.nome}
					td #{valor.login}
					td #{valor.senha}
					td #{valor.data_cad}
					td
						a(href="/usuarios/show/#{valor._id}" title="Visualizar" class="btn btn-primary")
							span(class="glyphicon glyphicon-search")
						&nbsp
						a(href="/usuarios/edit/#{valor._id}" title="Editar" class="btn btn-info")
							span(class="glyphicon glyphicon-pencil")
	br
	a(href="/usuarios/create" title="Novo Usuario")
		input(type="button", value="Novo Usuario" class="btn btn-default")
	&nbsp
	a(href="javascript:;" class="bt_export btn btn-default" title="Exportar" onclick="return ExcellentExport.excel(this, 'tb1', 'Tabela Usuário');") Exportar

	script(type="text/javascript" src="javascripts/excellentexport.js")
	script(type="text/javascript" src="javascripts/noticias.js")
